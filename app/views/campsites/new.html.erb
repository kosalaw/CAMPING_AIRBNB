
<div class="container" id="add-camp-container" >
  <div class="row justify-content-md-center">
    <div class="col-6">
    
      <%= simple_form_for(@campsite) do |f| %>

      <div class="form-inputs">

        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :description %> 
        <%= f.input :price_per_night %>
        <%= f.input :capacity %>
        <%= f.input :photo, as: :file %>
          
      </div>
      
      <button type="button" class="form-actions btn-success btn btn-block">
         <%= f.button :submit, "Create Campsite" %>    
        </button>
      <% end %>
    </div>
  </div>
</div>

